# Docker Compose Environment Configuration
# This file contains environment variables for Docker services
# Copy to .env and customize for your environment

# PostgreSQL Configuration
POSTGRES_PASSWORD=SecurePass123!
POSTGRES_PORT=5432

# Redis Configuration  
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# Neo4j Configuration
NEO4J_PASSWORD=SecureNeo4j123!
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474

# MongoDB Configuration
MONGODB_PASSWORD=SecureMongo123!
MONGODB_PORT=27017

# Kafka Configuration
KAFKA_PORT=9092
KAFKA_HOST_PORT=29092
ZOOKEEPER_PORT=2181

# Application API Configuration
API_PORT=8000

# Service URLs (Internal Docker Network)
DATABASE_URL=postgresql+asyncpg://ai_agent:${POSTGRES_PASSWORD}@postgres:5432/ai_customer_service
REDIS_URL=redis://redis:6379/0
ELASTICSEARCH_URL=http://elasticsearch:9200
NEO4J_URL=bolt://neo4j:${NEO4J_PASSWORD}@neo4j:7687
MONGODB_URL=mongodb://admin:${MONGODB_PASSWORD}@mongodb:27017/ai_customer_service?authSource=admin
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Docker Network Configuration
DOCKER_SUBNET=172.20.0.0/16

# Volume Mounts
POSTGRES_DATA_VOLUME=postgres_data
REDIS_DATA_VOLUME=redis_data
ELASTICSEARCH_DATA_VOLUME=elasticsearch_data
NEO4J_DATA_VOLUME=neo4j_data
NEO4J_LOGS_VOLUME=neo4j_logs
MONGODB_DATA_VOLUME=mongodb_data
KAFKA_DATA_VOLUME=kafka_data

# Health Check Configuration
POSTGRES_HEALTHCHECK_INTERVAL=10s
POSTGRES_HEALTHCHECK_TIMEOUT=5s
POSTGRES_HEALTHCHECK_RETRIES=5
POSTGRES_HEALTHCHECK_START_PERIOD=30s

REDIS_HEALTHCHECK_INTERVAL=10s
REDIS_HEALTHCHECK_TIMEOUT=3s
REDIS_HEALTHCHECK_RETRIES=5

ELASTICSEARCH_HEALTHCHECK_INTERVAL=30s
ELASTICSEARCH_HEALTHCHECK_TIMEOUT=10s
ELASTICSEARCH_HEALTHCHECK_RETRIES=5

NEO4J_HEALTHCHECK_INTERVAL=30s
NEO4J_HEALTHCHECK_TIMEOUT=10s
NEO4J_HEALTHCHECK_RETRIES=5

MONGODB_HEALTHCHECK_INTERVAL=10s
MONGODB_HEALTHCHECK_TIMEOUT=5s
MONGODB_HEALTHCHECK_RETRIES=5

KAFKA_HEALTHCHECK_INTERVAL=30s
KAFKA_HEALTHCHECK_TIMEOUT=10s
KAFKA_HEALTHCHECK_RETRIES=5

API_HEALTHCHECK_INTERVAL=30s
API_HEALTHCHECK_TIMEOUT=10s
API_HEALTHCHECK_RETRIES=5
API_HEALTHCHECK_START_PERIOD=60s

# Container Restart Policy
RESTART_POLICY=unless-stopped

# Docker Image Versions
POSTGRES_IMAGE=postgres:16-alpine
REDIS_IMAGE=redis:7-alpine
ELASTICSEARCH_IMAGE=docker.elastic.co/elasticsearch/elasticsearch:8.11.3
NEO4J_IMAGE=neo4j:5.15.0
MONGODB_IMAGE=mongo:7.0.5
ZOOKEEPER_IMAGE=confluentinc/cp-zookeeper:7.5.1
KAFKA_IMAGE=confluentinc/cp-kafka:7.5.1

# Resource Limits (uncomment to enable)
# POSTGRES_MEMORY_LIMIT=1g
# POSTGRES_CPUS_LIMIT=1.0
# REDIS_MEMORY_LIMIT=512m
# REDIS_CPUS_LIMIT=0.5
# ELASTICSEARCH_MEMORY_LIMIT=1g
# ELASTICSEARCH_CPUS_LIMIT=1.0
# NEO4J_MEMORY_LIMIT=1g
# NEO4J_CPUS_LIMIT=1.0
# MONGODB_MEMORY_LIMIT=512m
# MONGODB_CPUS_LIMIT=0.5
# KAFKA_MEMORY_LIMIT=1g
# KAFKA_CPUS_LIMIT=1.0
# API_MEMORY_LIMIT=1g
# API_CPUS_LIMIT=1.0